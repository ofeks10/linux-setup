if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/ofeks10/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/ofeks10/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/ofeks10/anaconda3/bin:$PATH"
    fi
